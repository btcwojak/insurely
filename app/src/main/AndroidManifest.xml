<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spudg.insurely">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Insurely">
        <activity
            android:name="com.spudg.insurely.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spudg.insurely.TagActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Insurely" />
        <activity
            android:name="com.spudg.insurely.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Insurely" />
        <activity
            android:name="com.spudg.insurely.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Insurely" />

        <receiver android:name="com.spudg.insurely.PolicyCheckReminder" />
    </application>

</manifest>